<div class="row">
  <div class="large-12">
    <h1>Questions</h1>
    <h4><%= link_to "Add a Question", controller: "questions", action: "new" %>
    <%- if !@questions.empty? -%>
      <table>
        <tr>
          <th>Title</th>
          <th></th>
        </tr>

        <%- @questions.each do |question| -%>
          <tr>
            <td><%= link_to question.title, question_path(question) %></td>
          </tr>
        <%- end -%>
      </table>
    <%- end -%>
  </div>
</div>